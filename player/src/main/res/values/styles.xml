<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="baseProgressBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">@dimen/show_change_progress_min_height</item>
        <item name="android:maxHeight">@dimen/show_change_progress_max_height</item>
    </style>


    <style name="tallerBarStyle" parent="baseProgressBar">
        <item name="android:progressDrawable">@drawable/progress_scl</item>
    </style>

    <style name="playerBarStyle" parent="baseProgressBar">
        <item name="android:progressDrawable">@drawable/progress_player</item>
    </style>

</resources>
